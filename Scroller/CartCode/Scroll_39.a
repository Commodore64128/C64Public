*=Scroller_ScrollBankEntry
!for .x , 39 {
!ifdef ScreenBTemp {
	lda ScreenA + (9*40) + .x
	sta ScreenBTemp + .x
} else {
	lda ScreenA + (9*40) + .x
	sta ScreenB + 39 + (9*40) + .x
}
}

!for .x , 39 {
!for .y , 9 {
	lda ScreenA + ((8-(.y-1))*40) + .x
	sta ScreenB + 39 + ((8-(.y-1))*40) + .x
}
}
	rts

*=Scroller_ScrollBankEntry + ScrollBankSplit

!ifdef Scroller_FullScreen {
!for .y , 5 {
!for .x , 39 {
	lda ScreenA + ((23-(.y-1))*40) + .x
	sta ScreenB + 39 + ((23-(.y-1))*40) + .x
}
}
}

!for .y , 9 {
!for .x , 39 {
	lda ScreenA + ((18-(.y-1))*40) + .x
	sta ScreenB + 39 + ((18-(.y-1))*40) + .x
}
}

!ifdef ScreenBTemp {
!for .x , 39 {
	lda ScreenBTemp + .x
	sta ScreenB + 39 + (9*40) + .x
}
}

	rts
