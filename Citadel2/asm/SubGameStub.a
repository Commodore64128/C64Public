	sei
	ldx #$ff
	txs
	lda #ProcessorPortAllRAMWithIO
	sta ZPProcessorPort
	lda #0
	sta VIC2BorderColour

	lda #VIC2MemorySetupDefault
	sta VIC2MemorySetup

	jsr SubGameEnter
.l1
	+MACROWaitForTheLastScan_A
	jsr Joystick_Read
	jsr SubGameUpdate
	jmp .l1


topScreenBank		!by 0
